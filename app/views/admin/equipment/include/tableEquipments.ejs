<div class="box box-primary">
  <div class="box-header">
    <h3 class="box-title"></h3>
    <a href="/admin/equipment/create" class="btn btn-success"><i class="fa fa-plus"></i></a>
    <div class="box-tools">
      <div class="input-group input-group-sm" style="width: 150px;">
        <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

        <div class="input-group-btn">
          <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
        </div>
      </div>
    </div>
  </div>
  <!-- /.box-header -->
  <div class="box-body table-responsive no-padding">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Codigo</th>
          <th>Nombre</th>
          <th>Modelo</th>
          <th>Marca</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% equipos.forEach(function(equipo){ %>
          <tr>
            <td><%= equipo.codigo %></td>
            <td><%= equipo.nombre %></td>
            <td><%= equipo.modelo %></td>
            <td><%= equipo.marca %></td>
            <th>
              <% if (equipo.estado) { %>
                <form action="/admin/equipment/update/<%= equipo._id %>" method="POST" style="display: inline;">
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                  <input type="hidden" name="estado" value="false">
                  <button type="submit" class="btn btn-danger">Desactivar</button>
                </form>
              <% } else { %>
                <form action="/admin/equipment/update/<%= equipo._id %>" method="POST" style="display: inline;">
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                  <input type="hidden" name="estado" value="true">
                  <button type="submit" class="btn btn-primary">Activar</button>
                </form>
              <% } %>
              <a href="/admin/sensor/<%= equipo._id %>" class="btn btn-success">Sensores</a>
            </th>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
  <!-- /.box-body -->
  <div class="box-footer clearfix">
    <%- include('../../../layout/pagination') %>
  </div>
</div>
