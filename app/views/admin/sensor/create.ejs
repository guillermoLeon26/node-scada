<%- include('../../layout/main-header') %>
</head>
<%- include('../../layout/header') %>
<%- include('../../layout/sidebar') %>
<%- include('../../layout/content') %>

<section class="content-header">
  <h1>Crear Sensor</h1>
</section>

<section class="content container-fluid">
  <div class="col-xs-12">
    <% if(errors) { %>
      <div class="alert alert-danger alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
        <h4><i class="icon fa fa-ban"></i> Alert!</h4>
        <ul>
          <% errors.forEach(function(error){ %>
            <li><%= error.msg %></li>
          <%})%>
        </ul>
      </div>
      <% } %>
  </div>

  <div class="col-md-6">
    <div class="box box-primary">

      <form role="form" action="/admin/sensor" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">  
        <input type="hidden" name="idEquipment" value="<%= idEquipment %>">
        <div class="box-body">

          <% if (oldInput) {%>
            <div class="form-group">
              <label for="tipo">Tipo</label>
              <input type="text" class="form-control" id="tipo" name="tipo" value="<%= oldInput.tipo %>">
            </div>
            <div class="form-group">
              <label for="nombre">Unidad</label>
              <input type="text" class="form-control" id="unidad" name="unidad" value="<%= oldInput.unidad %>">
            </div>
            <div class="form-group">
              <label for="marca">Marca</label>
              <input type="text" class="form-control" id="marca" name="marca" value="<%= oldInput.marca %>">
            </div>
            <div class="form-group">
              <label for="modelo">Modelo</label>
              <input type="text" class="form-control" id="modelo" name="modelo" value="<%= oldInput.modelo %>">
            </div>
            <div class="form-group">
              <label for="serie">Serie</label>
              <input type="text" class="form-control" id="serie" name="serie" value="<%= oldInput.serie %>">
            </div>
            <div class="form-group">
              <label for="ubicacion">Ubicacion</label>
              <input type="text" class="form-control" id="ubicacion" name="ubicacion" value="<%= oldInput.ubicacion %>">
            </div>
          <% } else { %>
            <div class="form-group">
              <label for="tipo">Tipo</label>
              <input type="text" class="form-control" id="tipo" name="tipo">
            </div>
            <div class="form-group">
              <label for="nombre">Unidad</label>
              <input type="text" class="form-control" id="unidad" name="unidad">
            </div>
            <div class="form-group">
              <label for="marca">Marca</label>
              <input type="text" class="form-control" id="marca" name="marca">
            </div>
            <div class="form-group">
              <label for="modelo">Modelo</label>
              <input type="text" class="form-control" id="modelo" name="modelo">
            </div>
            <div class="form-group">
              <label for="serie">Serie</label>
              <input type="text" class="form-control" id="serie" name="serie">
            </div>
            <div class="form-group">
              <label for="ubicacion">Ubicacion</label>
              <input type="text" class="form-control" id="ubicacion" name="ubicacion">
            </div>
          <% } %>

        </div>
        <div class="box-footer">
          <button type="submit" class="btn btn-primary">Registrar</button>
        </div>
      </form>

    </div>
  </div>
</section>

<%- include('../../layout/footer') %>
<%- include('../../layout/main-footer') %>
</body>
</html>
