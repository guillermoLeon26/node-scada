<%- include('../../layout/main-header') %>
</head>
<%- include('../../layout/header') %>
<%- include('../../layout/sidebar') %>
<%- include('../../layout/content') %>

<section class="content-header">
  <h1>Crear Usuario</h1>
</section>

<section class="content container-fluid">
  <div class="col-xs-12">
    <% if(errors) { %>
      <div class="alert alert-danger alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
        <h4><i class="icon fa fa-ban"></i> Alert!</h4>
        <ul>
          <% errors.forEach(function(error){ %>
            <li><%= error.msg %></li>
          <%})%>
        </ul>
      </div>
      <% } %>
  </div>

  <div class="col-md-6">
    <div class="box box-primary">

      <form role="form" action="/admin/user" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <input type="hidden" name="_method" value="POST">
        <div class="box-body">

          <% if (oldInput) {%>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" placeholder="Ingresar el Email" name="email" value="<%= oldInput.email %>">
              </div>
              <div class="form-group">
                <label for="password1">Password</label>
                <input type="text" class="form-control" id="password" placeholder="Password" name="password" value="<%= oldInput.password %>">
              </div>
          <% } else { %>
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" id="email" placeholder="Ingresar el Email" name="email">
            </div>
            <div class="form-group">
              <label for="password1">Password</label>
              <input type="text" class="form-control" id="password" placeholder="Password" name="password">
            </div>
          <% } %>

        </div>
        <div class="box-footer">
          <button type="submit" class="btn btn-primary">Registrar</button>
        </div>
      </form>

    </div>
  </div>
</section>

<%- include('../../layout/footer') %>
<%- include('../../layout/main-footer') %>
</body>
</html>
